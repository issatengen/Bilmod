{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
{{ include('partials/admin_navbar.html.twig') }}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Catégories</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> Créer une nouvelle
        </a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Code</th>
                        <th>Libellé</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.code }}</td>
                        <td>{{ category.label }}</td>
                        <td>{{ category.description }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-secondary btn-sm me-1">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
