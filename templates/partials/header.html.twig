{# Barre de navigation réactive pour le site de formation en ligne #}
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary-emphasis" href="{{ path('app_home') }}">
            <img src="{{ asset('upload_images/logo.PNG') }}" style="height:4rem" class="d-inline-block align-text-top me-2 rounded-circle" alt="Logo MOBIL">
            <span class="h3 fw-bolder">
                MOBIL<span class="text-danger-emphasis h3"> </span>
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#estoreNavbar" aria-controls="estoreNavbar" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="estoreNavbar">
            <ul class="navbar-nav ms-auto mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_home' %} active text-primary-emphasis fw-bold {% endif %}" aria-current="page" href="{{ path('app_home') }}">
                        <i class="fa fa-house me-1{% if app.request.attributes.get('_route') starts with 'app_home' %} fa-spin{% endif %}"></i>Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_feature' %} active text-primary-emphasis fw-bold {% endif %}" href="#">
                        <i class="fa-solid fa-star me-1{% if app.request.attributes.get('_route') starts with 'app_feature' %} fa-spin{% endif %}"></i>Formations en ligne
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_contact' %} active text-primary-emphasis fw-bold {% endif %}" href="#">
                        <i class="fa-solid fa-phone me-1{% if app.request.attributes.get('_route') starts with 'app_contact' %} fa-spin{% endif %}"></i>Contact
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ms-lg-3">
                <li class="nav-item">
                    <div class="nav-item dropdown">
                            <a class="nav-link position-relative" href="{{ path('app_order_singleC') }}"  role="button" >
                                <i class="fa-solid fa-cart-shopping"></i>
                                {# <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span> #}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="cartDropdown" style="min-width: 250px;">
                                <li class="text-center text-muted small">Your cart is empty</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-center" href="{{ path('app_order_new') }}">
                                        Create order
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-center" href="{{ path('app_order_singleC') }}">
                                        View Orders
                                    </a>
                                </li>
                            </ul>
                    </div>
                </li>
                {% if app.user %}
                    <li class="nav-item dropdown ms-auto">
                        <a class="nav-link text-success d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa ms-3 h3 fa-user-circle me-2" title="{{ app.user.name|default(app.user.email) }}"></i>
                        </a>
                    </li>
                    {% if app.user.role.code == 'ADMIN' or app.user.role.code == 'SUSER' %}
                        <li class="nav-item dropdown ms-auto">
                            <a class="nav-link text-success fw-bold d-flex align-items-center" href="{{ path('app_admin_dashboard') }}">
                                <i class="fa ms-3 h3 fa-dashboard me-2" title="Tableau de bord"></i>
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item dropdown ms-auto">
                        <a class="nav-link text-danger fw-bold d-flex align-items-center" href="{{ path('app_logout') }}">
                            <i class="fa ms-3 h3 fa-sign-out me-2" title="Déconnexion"></i>
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item ms-4">
                        <a class="btn btn-success shadow-sm ms-3" href="{{ path('app_login') }}">
                            <i class="fa fa-sign-in" title="Se connecter à votre compte"></i>
                            Connexion
                        </a>
                    </li>
                    <li class="nav-item ms-4">
                        <a class="btn btn-light shadow-sm ms-3" href="{{ path('app_user_new') }}">
                            Commencer
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Fin de la barre de navigation -->
