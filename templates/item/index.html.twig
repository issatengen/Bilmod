{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    {{ include('partials/admin_navbar.html.twig') }}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0 h2">Cours</h1>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="" class="text-decoration-none">Cours</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste des cours</li>
            </ol>
        </nav>
    </div>
    <hr class="my-1">

        <div class="container mb-3 card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Catégories</th>
                            <th>Désignation</th>
                            <th>Prix</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.category.label }}</td>
                            <td>{{ item.designation }}</td>
                            <td>{{ item.price|number_format(0, '.', ',') }} FCFA</td>
                            <td>{{ item.description }}</td>
                            <td>
                                <a href="{{ path('app_leson_module_index', {'id': item.id}) }}" class="btn btn-outline-secondary btn-sm me-1" title="Voir les modules">
                                    <i class="fa fa-eye" title="Afficher les différents chapitres ou modules de cour {{ item.designation }} "></i>
                                </a>
                                <a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ path('app_leson_module_new', {'id': item.id}) }}" class="btn btn-outline-success btn-sm" title="Ajouter un module à ce cours">
                                    <i class="fa fa-add"></i>
                                </a>     
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
