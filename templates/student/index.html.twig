{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StudentCode</th>
                <th>StudentFirstName</th>
                <th>StudentName</th>
                <th>StudentEmail</th>
                <th>StudentPhoto</th>
                <th>StudentPassword</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.StudentCode }}</td>
                <td>{{ student.studentFirstName }}</td>
                <td>{{ student.studentName }}</td>
                <td>{{ student.studentEmail }}</td>
                <td>{{ student.studentPhoto }}</td>
                <td>{{ student.studentPassword }}</td>
                <td>
                    <a href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
